<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:custom="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin" xmlns:badge="clr-namespace:Syncfusion.XForms.BadgeView;assembly=Syncfusion.SfBadgeView.XForms"
             Title="HGPT Mechanical"
             BackgroundImageSource="hinhnen.png"
             Shell.NavBarIsVisible="True"
             x:Class="HGPT_APP.Views.Main">
   
    <Shell.TitleView >
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <custom:CircleImage x:Name="AnhDaiDien" Source="trangchu.jpg" WidthRequest="40" HeightRequest="40" Margin="0,0,0,0" Aspect="AspectFill" 
                                VerticalOptions="Center" HorizontalOptions="Start" >
                <custom:CircleImage.GestureRecognizers>
                    <TapGestureRecognizer Tapped="hinhdaidien_Tapped"></TapGestureRecognizer>
                </custom:CircleImage.GestureRecognizers>
            </custom:CircleImage>
            <Label  x:Name="txtName"  TextColor="White" FontSize="20" FontAttributes="Bold" 
                    VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                    HorizontalOptions="FillAndExpand">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Hi,  "  FontSize="16"  ></Span>
                        <Span Text="{Binding FullName}"  FontSize="20" FontAttributes="Bold"  ></Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <badge:SfBadgeView BadgeText="0" HorizontalOptions="End" VerticalOptions="Center" x:Name="txtThongBao">
                <badge:SfBadgeView.Content>
                    <Image Source="notification.png" HeightRequest="30" WidthRequest="30">
                        <Image.GestureRecognizers >
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3"/>
                        </Image.GestureRecognizers>
                    </Image>
                </badge:SfBadgeView.Content>
                <badge:SfBadgeView.BadgeSettings>
                    <badge:BadgeSetting BadgeType="Success"  BadgePosition="TopRight"/>
                </badge:SfBadgeView.BadgeSettings>
            </badge:SfBadgeView>
        </StackLayout>
    </Shell.TitleView>
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Text="Xem thông báo" IconImageSource="notification.png" x:Name="btnthongbao" Clicked="btnthongbao_Clicked"></ToolbarItem>-->
        <ToolbarItem Text="Đổi mật khẩu" IconImageSource="setting.png" x:Name="btnCaiDat" Clicked="btnCaiDat_Clicked" Order="Secondary" Priority="2"></ToolbarItem>
        <ToolbarItem Text="Đăng xuất" IconImageSource="offline.png" x:Name="btnThoat" Clicked="btnThoat_Clicked" Order="Secondary" Priority="3" ></ToolbarItem>
       


    </ContentPage.ToolbarItems>
    <ContentPage.Content>
            <Grid RowDefinitions="2.5*,7.5*" VerticalOptions="FillAndExpand" >
                <Image Source="trangchu.jpg" Grid.Row="0" Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Image>

                <ScrollView Grid.Row="1" >
                    <StackLayout Margin="0,0,0,0">
                    <Frame    Padding="2"  
                        BorderColor="#06264c"
                        CornerRadius="10"    
                        BackgroundColor="Transparent"                        
                        HeightRequest="200"
                        x:Name="frmCongViec"
                              IsVisible ="False"
                        >
                        <StackLayout Padding="5">
                            <Label Grid.Row="0" Text="Quản lý công việc" TextDecorations="Underline" TextColor="White" FontSize="20" FontAttributes="Italic"></Label>
                            <Grid ColumnDefinitions="3.3*,3.3*,3.4*" Margin="0,20,0,0" RowSpacing="0" 
                                      HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <StackLayout  Grid.Column="0" HorizontalOptions="CenterAndExpand">
                                    <Image Source="duyetgiacong.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="btnLenhSanXuat"  Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Label Text="Danh sách LSX" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0"  FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                </StackLayout>
                                <StackLayout  Grid.Column="1" HorizontalOptions="CenterAndExpand">
                                    <Image Source="duyetdinhmuc.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="btnPhanChiaCongViec"  Tapped="TapGestureRecognizer_Tapped_2"></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Label Text="Phân chia công việc" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0"  FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                </StackLayout>
                                <StackLayout Grid.Column="2"  HorizontalOptions="CenterAndExpand">
                                    <Image Source="history.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="btnLichSuCongViec"  Tapped="TapGestureRecognizer_Tapped_1"></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Label Text="Lịch sử công việc"  Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0" FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <Frame    Padding="2"  
                        BorderColor="#06264c"
                        CornerRadius="10"    
                        BackgroundColor="Transparent"                        
                        HeightRequest="200"
                        x:Name="frmThietBi"
                              IsVisible ="False">
                            <StackLayout Padding="5">
                                <Label Grid.Row="0" Text="Thiết bị công nghệ" TextDecorations="Underline" TextColor="White" FontSize="20" FontAttributes="Italic"></Label>
                                <Grid ColumnDefinitions="3.3*,3.3*,3.4*" Margin="0,20,0,0"  RowSpacing="0" 
                                      HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <StackLayout  Grid.Column="0" HorizontalOptions="CenterAndExpand">
                                        <Image Source="machine.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btndanhsachthietbi" Tapped="btndanhsachthietbi_Tapped" ></TapGestureRecognizer>
                                            </Image.GestureRecognizers>
                                        </Image>
                                    <Label Text="Danh mục thiết bị" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0" FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                    </StackLayout>
                                    <StackLayout  Grid.Column="1" HorizontalOptions="CenterAndExpand">
                                        <Image Source="lichxich.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btnLichXich" Tapped="btnLichXich_Tapped" ></TapGestureRecognizer>
                                            </Image.GestureRecognizers>
                                        </Image>
                                    <Label Text="Lịch xích bảo trì" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0"  FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                    </StackLayout>
                                    <StackLayout Grid.Column="2"  HorizontalOptions="CenterAndExpand">
                                        <Image Source="history.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btnLichSuThietBi" Tapped="btnLichSuThietBi_Tapped"></TapGestureRecognizer>
                                            </Image.GestureRecognizers>
                                        </Image>
                                    <Label Text="Lịch sử bảo trì" Style="{StaticResource styleLableBlue}"   Padding="5,0,5,0" FontAttributes="Italic" HorizontalTextAlignment="Center" ></Label>
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>

                    <Frame    Padding="2"  
                        BorderColor="#06264c"
                        CornerRadius="10"    
                        BackgroundColor="Transparent"                        
                        HeightRequest="200"
                        x:Name="frmchamsockhachhang"
                              IsVisible ="False">
                        <StackLayout Padding="5">
                            <Label Grid.Row="0" Text="Chăm sóc khách hàng" TextDecorations="Underline" TextColor="White" FontSize="20" FontAttributes="Italic"></Label>
                            <Grid ColumnDefinitions="3.3*,3.3*,3.4*" RowDefinitions="*,*" Margin="0,20,0,0"  RowSpacing="0" 
                                      HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">                                
                               
                                    <badge:SfBadgeView Grid.Row="0" Grid.Column="0" BadgeText="0" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" x:Name="bagesinhnhatkhachhang">
                                        <badge:SfBadgeView.Content>
                                        <Image Source="birthday.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="btnsinhnhatkhachhangchuachamsoc_Tapped"></TapGestureRecognizer>
                                                </Image.GestureRecognizers>
                                            </Image>                                            
                                        </badge:SfBadgeView.Content>
                                        <badge:SfBadgeView.BadgeSettings>
                                        <badge:BadgeSetting BadgeType="Error" Offset="-5,10" BadgeAnimation="Scale" BadgePosition="TopRight" FontSize="15" FontAttributes="Bold" />
                                        </badge:SfBadgeView.BadgeSettings>
                                    </badge:SfBadgeView>
                                <Label Grid.Row="1" Grid.Column="0" Text="Sinh nhật khách hàng" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0" FontAttributes="Italic" HorizontalTextAlignment="Center" VerticalOptions="Center"></Label>



                                <Image Grid.Row="0" Grid.Column="1" Source="finishjob.png" Aspect="AspectFit" HeightRequest="70" WidthRequest="70" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="btnHoanThanhChamSocKhachHang" Tapped="btnHoanThanhChamSocKhachHang_Tapped" ></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>
                                <Label Grid.Row="1" Grid.Column="1" Text="Đã chăm sóc khách hàng" Style="{StaticResource styleLableBlue}"  Padding="5,0,5,0"  FontAttributes="Italic" HorizontalTextAlignment="Center" VerticalOptions="Center" ></Label>
                             

                            </Grid>
                        </StackLayout>
                    </Frame>




                </StackLayout>
                </ScrollView>








            </Grid>

        </ContentPage.Content>
</ContentPage>